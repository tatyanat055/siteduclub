<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nos Équipes</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(to bottom, #FFD700, #FF4500); /* Fond dégradé jaune vers rouge */
      color: white;
      padding: 20px;
      margin: 0;
    }
    h1 {
      text-align: center;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }
    .team-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }
    .team-card {
      background: rgba(255, 255, 255, 0.2);  /* Fond semi-transparent pour les cartes */
      border: 2px solid white;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      padding: 20px;
      width: 300px;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease; /* Effet de survol */
    }
    .team-card:hover {
      transform: translateY(-10px); /* Remonte légèrement la carte au survol */
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3); /* Augmente l'ombre au survol */
    }
    .team-card h2 {
      margin: 0;
      font-size: 1.5em;
      color: #FFD700; /* Jaune pour les titres */
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    }
    .team-card p {
      margin: 10px 0;
      color: white;
    }
    .button-container {
      text-align: center;
      margin-top: 20px;
    }
    .button-container a {
      text-decoration: none;
      background-color: #FF4500; /* Rouge */
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 1.2em;
      transition: background-color 0.3s ease;
    }
    .button-container a:hover {
      background-color: #FFD700; /* Jaune au survol */
      color: #FF4500; /* Rouge au survol */
    }
  </style>
</head>
<body>
  <h1>Nos Équipes</h1>
  <div class="team-container">
    <% const teams = [
      { name: "Senior Masculin", coach: "Coach John", trainingDays: "Mardi & Jeudi" },
      { name: "Senior Féminin", coach: "Coach Marie", trainingDays: "Lundi & Mercredi" },
      { name: "U18", coach: "Coach Thomas", trainingDays: "Mercredi & Vendredi" },
      { name: "U15", coach: "Coach Claire", trainingDays: "Mardi & Vendredi" },
      { name: "U11", coach: "Coach Lucas", trainingDays: "Mercredi" },
      { name: "U9", coach: "Coach Emma", trainingDays: "Samedi matin" },
      { name: "U7", coach: "Coach David", trainingDays: "Samedi après-midi" }
    ]; %>

    <% teams.forEach(team => { %>
      <div class="team-card">
        <h2><%= team.name %></h2>
        <p><strong>Entraîneur :</strong> <%= team.coach %></p>
        <p><strong>Jours d'entraînement :</strong> <%= team.trainingDays %></p>
      </div>
    <% }) %>
  </div>

  <!-- Bouton de navigation -->
  <div class="button-container">
    <a href="/">Retour à l'accueil</a>
  </div>
</body>
</html>
